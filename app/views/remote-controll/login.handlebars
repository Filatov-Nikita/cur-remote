<main id="auth">
  <div class="auth__cont">
    <h1 class="auth__h1">Вход</h1>
    <form class="form" method="post" action="/login">
      <label class="auth__label" for="login">Логин</label>
      <input name="login" class="auth__input" id="login" type="text" required>
      <label class="auth__label" for="password">Пароль</label>
      <input name="password" class="auth__input" id="paswword" type="password" required>
      <button class="auth__submit" type="submit">Войти</button>
      {{#if invalidCredentials}}
        <div class="auth__error">Неправильный логин или пароль</div>
      {{/if}}
    </form>
  </div>
</main>
